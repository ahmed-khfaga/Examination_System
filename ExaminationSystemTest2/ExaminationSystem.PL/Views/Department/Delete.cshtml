@model Department

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow rounded-4 border-0">
                <div class="card-header bg-danger text-white rounded-top-4">
                    <h3 class="mb-0">Delete Department</h3>
                </div>

                <form asp-action="Delete" asp-route-id="@Model.ID" method="post">
                    <div class="card-body p-4">
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-semibold fs-5">Department Name</label>
                            <input asp-for="Name" class="form-control" readonly />
                        </div>

                        <div class="alert alert-warning fw-semibold fs-6 mt-4">
                            Are you sure you want to delete this department? if you want delete press Delete
                        </div>
                    </div>

                    <div class="card-footer bg-light border-0 text-end rounded-bottom-4">
                        <input type="submit" value="Delete" class="btn btn-danger px-4" />
                        <a asp-action="Index" class="btn btn-outline-primary ms-3 px-4">← Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
